{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkRange": {
            "type": "string",
            "metadata": {
                "description": "This defines address space of network"
            
            },

            "defaultValue": "10.10.0.0/16"

        },
        "subnetRange": {
            "type": "array",
            "metadata": {
                "description": "This defines address space of subnets"
            },
            "defaultValue": ["10.10.0.0/24","10.10.1.0/24","10.10.2.0/24"]
        }
       
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "name": "ntier",
            "location": "[resourceGroup().location]",
            "tags": {
                "env": "dev"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": ["[parameters('networkRange')]"]
                },
                "subnets": [
                    {

                        "name": "web",
                        "properties": {
                            "addressPrefix": "[parameters('subnetRange')[0]]"
                        }
                    },
                    {

                        "name": "app",
                        "properties": {
                            "addressPrefix": "[parameters('subnetRange')[1]]"
                        }
                    },
                    {

                        "name": "db",
                        "properties": {
                            "addressPrefix": "[parameters('subnetRange')[2]]"
                        }
                    }
                ]
            }

        }
    ]
}