{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkRange": {
            "type": "string",
            "metadata": {
                "description": "This defines address space of network"
            
            },

            "defaultValue": "10.10.0.0/16"

        },
        "subnetRange": {
            "type": "array",
            "metadata": {
                "description": "This defines address space of subnets"
            },
            "defaultValue": ["10.10.0.0/24","10.10.1.0/24","10.10.2.0/24"]
        }
       
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "name": "ntier",
            "location": "[resourceGroup().location]",
            "tags": {
                "env": "dev"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": ["[parameters('networkRange')]"]
                }
                
            }

        },

       {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2022-09-01",
            "name": "ntier/web",
            "properties": {
                "addressPrefix": "[parameters('subnetRange')[0]]"
            }, 
            "dependsOn": ["[resourceId('Microsoft.Network/virtualNetworks', 'ntier')]"]
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2022-09-01",
            "name": "ntier/app",
            "properties": {
                "addressPrefix": "[parameters('subnetRange')[1]]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'ntier')]",
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'ntier', 'web')]"
                ]
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2022-09-01",
            "name": "ntier/db",
            "properties": {
                "addressPrefix": "[parameters('subnetRange')[2]]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'ntier')]",
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'ntier', 'app')]"
                ]
        }

    ]
}